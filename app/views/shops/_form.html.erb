<%= form_for(@shop) do |f| %>
  <%= render 'shared/error_messages', { resource: @shop } %>
  <fieldset>
      <div class="form-group">
        <%= f.label :name %><br>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :token %><br>
        <%= f.text_field :token, class: 'form-control' %>
      </div>

      <div class="actions">
        <%= f.submit 'Salvar', class: 'btn btn-primary' %>
        <%= link_to 'Cancelar', :back, class: 'btn btn-default'  %>
      </div>
  </fieldset>
<% end %>
